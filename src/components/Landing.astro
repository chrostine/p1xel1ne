---
import Logo from '../components/logo.astro';
import Introtekst from '../components/introtekst.astro';
import Knap from '../components/knap.astro';
---

<style>[x-cloak]{display:none}</style>

<div x-data="{ showLogo: true, reveal: false }" class="grid justify-center">
  <div class="grid lg:grid-cols-2 gap-10 justify-center items-center lg:pt-24">

    <div class="relative">
      <div class="invisible">
        <Logo />
      </div>

      <!-- Logo -->
      <div
        x-show="showLogo"
        x-transition:leave="transition ease-in-out duration-1000"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        @click="showLogo = false"
        @transitionend="if ($event.propertyName === 'opacity' && !showLogo) reveal = true"
        class="absolute inset-0 cursor-pointer"
        >
        <Logo />
      </div>

      <!-- Introtekst -->
      <div
        x-cloak
        x-show="reveal"
        x-transition:enter="transition ease-in-out duration-1000"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        class="absolute inset-0 lg:pt-0 pt-3 items-start"
      >
        <Introtekst />
        <Knap linket="/spil" teksten="Start spillet"></Knap>
      </div>
    </div>

    <!-- Kolonne 2 -->
    <img src="/Pixeline/pixeline_05.png" alt="" width="400" class="lg:ml-5 ml-12" />
  </div>
</div>
